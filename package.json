{
  "name": "products-crud-backend",
  "version": "1.0.0",
  "description": "Backend API para prueba tecnica Frontend - Bun + Hono + Drizzle + Neon",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --env-file=.env --watch src/index.ts",
    "start": "bun run --env-file=.env src/index.ts",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio",
    "db:seed": "bun run --env-file=.env src/db/seed.ts"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "drizzle-kit": "^0.31.8"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.4"
  }
}
